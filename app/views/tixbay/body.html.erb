<% content_for :navbar do %>
<% render "navbar" #render navbar partials here%>
<% end %>

<!--title -->
<table width="100%" border="0" cellpadding="0" cellspacing="8" bordercolor="#FFFFFF" bgcolor="#C00000">
     <tr>
     <td width="100%" bordercolor="#C00000" bgcolor="#000000"><div align="center" class="buttons_on"><%=  @title %></div>
     </td></tr></table>

<% @shows.each do |s| %>
<hr/>
<div class="show">
<h2><%= s.title %></h2>
<%= image_tag s.image_url, "width"=>"30%" %>
<p><%= s.summary %>
<p><a class="buytickets btn btn-primary" href="<%= s.link %>">Purchase Tickets</a>
</div>
<% end %>
