<h1 id="recommendation_header">Recommendation Form</h1>

<div id="recommendation_welcome">
Welcome <%= @user %>!<br>
Please fill out this form so we can help you find shows.
</div>

<%= form_tag :action => "index" do %>
<div>
    <label for="recommendation_location">Location</label>
    <%= text_field :recommendation, :location %>
</div>
<div>
    <label for="recommendation_genres">Genres</label>
    <%= text_area :recommendation, :genres, :id => 'genres' %>
</div>
<div>
    <%= submit_tag value="Submit" %>
</div>
<% end %>
