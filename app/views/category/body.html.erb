<% content_for :navbar do %>
<% render "layouts/navbar" #render navbar partials here%>
<% end %>

<!--title -->
<table width="100%" border="0" cellpadding="0" cellspacing="8" bgcolor="#C00000" style="margin-bottom: 3%">
     <tr>
     <td width="100%" bgcolor="#000000"><div align="center" class="buttons_on" id="pagetitle"><%=  @title %></div>
     </td></tr></table>

  <% if @noresults %>
    <div id="flash_notice">
      <%= @noresults %>
      <%= link_to "Go back to Recommendation Form", "/recommendations/form?edit=true" %>
    </div>
  <% end %>

<div id="shows">
  <%= render :partial => 'category/show' %>
</div>

<div id='pagination'>
  <%= will_paginate @shows %>
</div>
