<% color_map = {'theater'=> '#FFFFFF', 'music'=> '#FFFFFF','film'=> '#FFFFFF','all culture'=>'#FFFFFF'} %>
<% color_map.each do |key, value| %>
<% if key == @title %>
<% color_map[key] = '#000000' %>
<% end %>
<% end %>

<% buttons_map = {'theater'=> 'buttons', 'music'=> 'buttons','film'=> 'buttons','all culture'=>'buttons'} %>
<% buttons_map.each do |key, value| %>
<% if key == @title %>
<% buttons_map[key] = 'buttons_on' %>
<% end %>
<% end %>

      <div class="row-fluid" id="navbar">
          <table width="100%" border="0" cellpadding="0" cellspacing="8" bordercolor="#FFFFFF" bgcolor="#C5000E">
            <tr>
              <td width="29%" bgcolor="<%= color_map['theater'] %>">
                <div align="center" class="<%= buttons_map['theater'] %>">
              <%= link_to "theater & dance", :action=>"theater"%>
                </div>
              </td>
              <td width="21%" bgcolor="<%= color_map['music'] %>">
                <div align="center" class="<%= buttons_map['music'] %>">
              <%= link_to "music", :action=>"music" %>
                </div>
              </td>
              <td width="21%" bgcolor="<%= color_map['film'] %>">
                <div align="center" class="<%= buttons_map['film'] %>">
              <%= link_to "film", :action=>"film"%>
                </div>
              </td>
              <td width="29%" bgcolor="<%= color_map['all culture'] %>">
                <div align="center" class="<%= buttons_map['all culture'] %>">
			        <%= link_to "all culture", :action=>"all_culture" %>
                </div>
              </td>
            </tr>
          </table>
		</div>
